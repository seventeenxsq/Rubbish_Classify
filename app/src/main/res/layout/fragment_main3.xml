<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/brownround3"
                android:layout_width="66dp"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/round_brown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/blueround3"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/round_blue" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/redround3"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="0dp"
                android:background="@drawable/round_red" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/greenround3"
                android:layout_width="62dp"
                android:layout_height="61dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/round_green" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="答 题 赢 积 分！"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textColor="#DD1B1B"/>

    <ImageView
        android:layout_width="318dp"
        android:layout_height="209dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@mipmap/haibao1" />

    <ImageView
        android:layout_width="314dp"
        android:layout_height="192dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@mipmap/haibao2" />

    <Button
        android:id="@+id/btn_dati"
        android:layout_width="170dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@mipmap/kaishidati" />



</LinearLayout>